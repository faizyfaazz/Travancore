<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            android:layout_width="115dp"
            android:layout_height="175dp"
            app:cardElevation="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="#ff0000"
                    android:id="@+id/home_card_imageview"
                    android:contentDescription="@string/home_card_imageview"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_card_title"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_below="@id/home_card_imageview"
                    android:text="fsdfbhjsdfdfsf"
                    android:paddingStart="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/home_card_desc"
                    android:layout_below="@id/home_card_title"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="jhfshfjfhjhdf dsgsdg
sgdgdsgs
sggsdgsdgsgsd"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>


</RelativeLayout>
